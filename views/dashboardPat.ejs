<!-- Header part -->
<%- include("header2") -%>




<!-- middle wrapper start -->
<section class="footer-spacing">
  
<div class="card p-4 light-bg-color">
  <div class="d-flex" style="margin: 20px 10%;">
    <button class="btn btn-secondary">
      <img src="https://i.imgur.com/wvxPV9S.png" height="100" width="100" />
    </button>


    <div style="margin-left: 20px;">
      <h2 class="sub-title">Name: <%=users.profilep.name%> <br>
      </h2>
      <span>Email: <%= users.username%> <br>
      </span>
    </div>
    <div style="margin-top: 5%;">
      <button class="btn-light">Edit Profile</button>
    </div>
  </div>
</div>




<div class="container mb-5">
  <div class="box" id="heading">
    <h1>Appointments</h1>
  </div>
</div>



<% users.profilep.appointments.forEach(function(appointment){ %>

<div class="card rounded box">
  <div class="card-body light-bg-color">
    <div>
      <p>Doctor Name: <%= appointment.doctor_name %> <br>
        Profession: <%= appointment.doctor_profession %> <br>
        Appointment Type: <%= appointment.visit_type %> <br>
        Date: <%= appointment.date %><br>
        Time: <%= appointment.time %> <br></p>
        <form class="" action="/postPatReadmore" method="post">
          <button name="viewmore" class="btn btn-link" value=<%= appointment.doctor_id %> >View More</button>
        </form>
        <br>
    </div>
    <div>
      <img class="img-fluid" src="https://bootdey.com/img/Content/avatar/avatar6.png" alt="">
    </div>
  </div>
</div>

<% }) %>

</section>



<!-- middle wrapper end -->





<!-- Footer part -->
<%- include("footer") -%>
