


<!-- Header part -->
<%- include("header2") -%>

  <!-- middle wrapper start -->

  <div class="card p-4 light-bg-color">
    <div class="d-flex" style="margin: 20px 10%;">
        <button class="btn btn-secondary">
            <img src="https://i.imgur.com/wvxPV9S.png" height="100" width="100" />
        </button>


        <div style="margin-left: 20px;">
            <h2 class="sub-title">Name: Dr. <%=users.profiled.name%> <br>
            </h2>
            <span>Email: <%=users.username%> <br>
                Profession: <%=users.profiled.profession%> <br>
                Qualification: <%=users.profiled.qualification%> <br></span>
        </div>
        <div style="margin-top: 5%;">
            <button class="btn-light">Edit Profile</button>
        </div>
      </div>
</div>




<div class="container">
<div class="box" id="heading">
<h1>Appointments</h1>
</div>
</div>

<% users.profiled.appointments.forEach(function(appointment){ %>
  <div class="card rounded box light-bg-color">
      <div class="card-body">
          <div>
              <p>Patient Name: <%=appointment.patient_name%> <br>
                  Appointment Type: <%=appointment.visit_type%> <br>
                  Date: <%=appointment.date%><br>
                  Time: <%=appointment.time%> <br>
              </p><br>

                  <form class="" action="/postDocReadmore" method="post">
                    <button name="viewmore" type="submit" class="btn btn-link" value=<%=appointment.patient_id%> >View More</button>
                  </form>

          </div>
          <div>
              <img class="img-fluid" src="https://bootdey.com/img/Content/avatar/avatar6.png" alt="">
          </div>
      </div>
  </div>
<% }) %>


      <!-- middle wrapper end -->





<!-- Footer part -->
<%- include("footer") -%>
